<% provide(:title, 'New local') %>
<h1>New local</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@local) do |f| %>
      <%= render 'fields', f: f %>

      <div class="form-actions">
	      <%= f.submit "Save local", class: "btn btn-primary" %>
	      <%= link_to "Cancel", locais_path, class: "btn btn-mini" %>
      </div>
    <% end %>
  </div>
</div>