<% provide(:title, 'New autor') %>
<h1>New autor</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@autor) do |f| %>
      
      <%= render 'fields', f: f %>

      <%= f.submit "Save autor", class: "btn btn-small btn-primary" %>
      <%= link_to "Cancel", autores_path, class: "btn btn-mini" %>
    <% end %>
  </div>
</div>