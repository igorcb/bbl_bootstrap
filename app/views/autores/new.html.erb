<% provide(:title, 'Novo autor') %>
<h1>Novo autor</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@autor) do |f| %>
      
      <%= render 'fields', f: f %>

      <%= f.submit "Salvar", class: "btn btn-small btn-primary" %>
      <%= link_to "Cancelar", autores_path, class: "btn btn-mini" %>
    <% end %>
  </div>
</div>