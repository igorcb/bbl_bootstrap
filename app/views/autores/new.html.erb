<% provide(:title, 'New autor') %>
<h1>New autor</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@autor) do |f| %>
      
      <%= render 'fields', f: f %>

      <div class="form-actions">
	      <%= f.submit "Save autor", class: "btn btn-primary" %>
	      <%= link_to "Cancel", autores_path, class: "btn btn-mini" %>
      </div>

    <% end %>
  </div>
</div>